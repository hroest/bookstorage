<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Comment</th>
    <th>Language</th>
    <th>Owner</th>
    <th>Book type</th>
    <th>Location</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%=h book.title %></td>
    <td><%=h book.subtitle %></td>
    <td><%=h book.comment %></td>
    <td><%=h book.language_id %></td>
    <td><%=h book.owner_id %></td>
    <td><%=h book.book_type_id %></td>
    <td><%=h book.location_id %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New book', new_book_path %>